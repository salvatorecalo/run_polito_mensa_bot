{
    "name": "Run Polito Mensa Bot",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "ms-python.debugpy",
                "ms-azuretools.vscode-docker",
                "eamodio.gitlens"
            ],
            "settings": {
                "python.defaultInterpreterPath": "/usr/local/bin/python",
                "python.linting.enabled": true,
                "python.linting.pylintEnabled": false,
                "python.formatting.provider": "black",
                "python.analysis.typeCheckingMode": "basic",
                "editor.formatOnSave": true,
                "files.exclude": {
                    "**/__pycache__": true,
                    "**/*.pyc": true
                }
            }
        }
    },
    "forwardPorts": [],
    "postCreateCommand": "pip install --no-cache-dir -r requirements.txt",
    "remoteUser": "vscode",
    "mounts": [
        "source=${localEnv:HOME}${localEnv:USERPROFILE}/.ssh,target=/home/vscode/.ssh,readonly,type=bind,consistency=cached"
    ],
    "remoteEnv": {
        "IG_USERNAME": "${localEnv:IG_USERNAME}",
        "IG_PASSWORD": "${localEnv:IG_PASSWORD}",
        "TARGET_USER": "${localEnv:TARGET_USER}",
        "TELEGRAM_TOKEN": "${localEnv:TELEGRAM_TOKEN}",
        "TELEGRAM_CHAT_ID": "${localEnv:TELEGRAM_CHAT_ID}",
        "SESSION_FILE": "${localEnv:SESSION_FILE}",
        "SUBSCRIBERS_FILE": "${localEnv:SUBSCRIBERS_FILE}"
    }
}
